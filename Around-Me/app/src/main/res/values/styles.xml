<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActionBarTheme.ActionBarStyle.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor" tools:ignore="NewApi">#FFFFFF</item>
    </style>

    <style name="CustomActionBarTheme.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@color/purple</item>
        <item name="background">@color/purple</item>
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/CustomActionBarTheme.ActionBarStyle.TitleTextStyle</item>
        <item name="titleTextStyle">@style/CustomActionBarTheme.ActionBarStyle.TitleTextStyle</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/CustomActionBarTheme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/CustomActionBarTheme.ActionBarStyle</item>
        <item name="actionModeShareDrawable">@drawable/ic_share_variant</item>
        <item name="homeAsUpIndicator">@drawable/ic_action_hardware_keyboard_arrow_left</item>
    </style>

</resources>
